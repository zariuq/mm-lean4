/-- Helper: toExpr that returns Option for bridge functions -/
def toExprOpt (f : Verify.Formula) : Option Spec.Expr := do
  let head ‚Üê f[0]?
  match head with
  | .const c =>
      let tail := (f.extract 1 f.size).toList.map Verify.Sym.value
      some ‚ü®‚ü®c‚ü©, tail‚ü©
  | _ => none

